<Window x:Class="Lab_rab1_2_KutlubaevA.D._БПИ_23_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ЛР1 — Часть 2 (Фигуры)" Height="200" Width="300" MinHeight="200" MinWidth="300">
    <Grid>
        <TabControl>
            <TabItem Header="Квадрат">
                <StackPanel>
                    <TextBlock Text="Введите сторону квадрата:"/>
                    <TextBox x:Name="TxtSquareSide" PreviewTextInput="TextBox_PreviewTextInput"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Вычислить Площадь" Click="BtnSquareArea_Click"/>
                        <Button Content="Вычислить Периметр" Click="BtnSquarePerimeter_Click"/>
                    </StackPanel>
                    <TextBlock Text="Результат:" FontWeight="Bold"/>
                    <TextBlock x:Name="ResultSquare" TextWrapping="Wrap" Text="—"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="Эллипс">
                <StackPanel>
                    <TextBlock Text="Введите большую полуось (a):"/>
                    <TextBox x:Name="TxtEllipseA" PreviewTextInput="TextBox_PreviewTextInput"/>
                    <TextBlock Text="Введите малую полуось (b):"/>
                    <TextBox x:Name="TxtEllipseB" PreviewTextInput="TextBox_PreviewTextInput"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Вычислить Площадь" Click="BtnEllipseArea_Click"/>
                        <Button Content="Вычислить Периметр" Click="BtnEllipsePerimeter_Click"/>
                    </StackPanel>
                    <TextBlock Text="Результат:" FontWeight="Bold"/>
                    <TextBlock x:Name="ResultEllipse" TextWrapping="Wrap" Text="—"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="Трапеция">
                <StackPanel>
                    <TextBlock Text="Основание A:"/>
                    <TextBox x:Name="TxtTrapBaseA" PreviewTextInput="TextBox_PreviewTextInput"/>
                    <TextBlock Text="Основание B:"/>
                    <TextBox x:Name="TxtTrapBaseB" PreviewTextInput="TextBox_PreviewTextInput"/>
                    <TextBlock Text="Высота H:"/>
                    <TextBox x:Name="TxtTrapHeight" PreviewTextInput="TextBox_PreviewTextInput"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Вычислить Площадь" Click="BtnTrapArea_Click"/>
                        <Button Content="Вычислить Периметр" Click="BtnTrapPerimeter_Click"/>
                    </StackPanel>
                    <TextBlock Text="Результат:" FontWeight="Bold"/>
                    <TextBlock x:Name="ResultTrap" TextWrapping="Wrap" Text="—"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>