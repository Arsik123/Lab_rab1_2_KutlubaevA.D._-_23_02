<Window x:Class="Lab_rab1_2_KutlubaevA.D._БПИ_23_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ЛР1 — Часть 2 (Геометрические фигуры)" Height="450" Width="600">
    <Grid Margin="10">
        <TabControl>
            <TabItem Header="Квадрат">
                <StackPanel Margin="10">
                    <TextBlock Text="Введите сторону квадрата:" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtSquareSide" PreviewTextInput="TextBox_PreviewTextInput" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <Button Content="Вычислить Площадь" Click="BtnSquareArea_Click" Margin="0,0,10,0"/>
                        <Button Content="Вычислить Периметр" Click="BtnSquarePerimeter_Click"/>
                    </StackPanel>
                    <TextBlock Text="Результат:" FontWeight="Bold"/>
                    <TextBlock x:Name="ResultSquare" TextWrapping="Wrap" Text="—"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="Эллипс">
                <StackPanel Margin="10">
                    <TextBlock Text="Введите большую полуось (a):" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtEllipseA" PreviewTextInput="TextBox_PreviewTextInput" Margin="0,0,0,10"/>
                    <TextBlock Text="Введите малую полуось (b):" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtEllipseB" PreviewTextInput="TextBox_PreviewTextInput" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <Button Content="Вычислить Площадь" Click="BtnEllipseArea_Click" Margin="0,0,10,0"/>
                        <Button Content="Вычислить Периметр" Click="BtnEllipsePerimeter_Click"/>
                    </StackPanel>
                    <TextBlock Text="Результат:" FontWeight="Bold"/>
                    <TextBlock x:Name="ResultEllipse" TextWrapping="Wrap" Text="—"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="Трапеция">
                <StackPanel Margin="10">
                    <TextBlock Text="Основание A:" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtTrapBaseA" PreviewTextInput="TextBox_PreviewTextInput" Margin="0,0,0,5"/>
                    <TextBlock Text="Основание B:" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtTrapBaseB" PreviewTextInput="TextBox_PreviewTextInput" Margin="0,0,0,5"/>
                    <TextBlock Text="Высота H:" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtTrapHeight" PreviewTextInput="TextBox_PreviewTextInput" Margin="0,0,0,5"/>
                    <TextBlock Text="Боковая сторона C:" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtTrapSideC" PreviewTextInput="TextBox_PreviewTextInput" Margin="0,0,0,5"/>
                    <TextBlock Text="Боковая сторона D:" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtTrapSideD" PreviewTextInput="TextBox_PreviewTextInput" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <Button Content="Вычислить Площадь" Click="BtnTrapArea_Click" Margin="0,0,10,0"/>
                        <Button Content="Вычислить Периметр" Click="BtnTrapPerimeter_Click"/>
                    </StackPanel>
                    <TextBlock Text="Результат:" FontWeight="Bold"/>
                    <TextBlock x:Name="ResultTrap" TextWrapping="Wrap" Text="—"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>